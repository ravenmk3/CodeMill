<Project Name="MyProject">
    <Options
        MapDirectory="Maps"
        TemplateDirectory="Templates"        
        OutputDirectory="C:\Output" 
    />
    <Parameters>
        <Item Name="Company">My Company</Item>
        <Item Name="Author">Anders Cui</Item>
    </Parameters>
    <Maps>
        <Item Name="Map1" />
    </Maps>
    <Namespaces>
        <Item>System</Item>
        <Item>System.Linq</Item>
        <Item>System.Collections</Item>
